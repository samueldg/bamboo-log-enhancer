{
  "manifest_version": 2,
  "name": "Bamboo Log Enhancer",
  "description": "Color Atlassian Bamboo log files",
  "homepage_url": "https://github.com/samueldg/bamboo-log-enhancer",
  "version": "0.1.2",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*.log",
        "file:///*.log"
      ],
      "js": [
        "js/color_logs.js"
      ],
      "css": [
        "css/bamboo_log.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "*://*/*.log"
  ],
  "optional_permissions": [
    "file:///*.log"
  ]
}
